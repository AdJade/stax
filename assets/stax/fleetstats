echo "==> CURRENTLY RUNNING FLEET INSTANCE STATS"
echo "----> RUNNING COREOS HOSTS"
ssh -i ~/.ssh/STAX_KEY.pem -l core -o "StrictHostKeyChecking no" `python -c "import random, sys; print random.choice(open(sys.argv[1]).readlines())," docker_hosts` 'fleetctl list-machines'
echo

echo "----> RUNNING UNITS (DOCKERS) ON COREOS HOSTS"
ssh -i ~/.ssh/STAX_KEY.pem -l core -o "StrictHostKeyChecking no" `python -c "import random, sys; print random.choice(open(sys.argv[1]).readlines())," docker_hosts` 'fleetctl list-units'
echo

echo "----> LOADED UNITS FILES ON COREOS HOSTS"
ssh -i ~/.ssh/STAX_KEY.pem -l core -o "StrictHostKeyChecking no" `python -c "import random, sys; print random.choice(open(sys.argv[1]).readlines())," docker_hosts` 'fleetctl list-unit-files'
echo
